# .myaliases - my custom shell aliases (shared between shells)

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias -- -='cd -'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'
alias _='sudo'

alias cp='cp -v'

case "$(uname -a)" in
*Linux*)
    alias ls='ls -F --color=auto'
    #TODO: change LS_COLORS or run dircolors or something
    ;;
*Darwin*)   # specifically Mac OS X
    alias ls='ls -FG'
    export LSCOLORS='exGxcxdxCxDaeaabagacad'
    ;;
*)
    alias ls='ls -F'
esac
alias l='ls -lh'
alias la='ls -A'
alias ll='ls -lAh'
alias l.='ls -d .*'
alias ll.='ls -lhd .*'

alias sl='ls'

mkcd () {
    mkdir -p "$1" && cd "$1" ;
}

# if nvim installed, use that
type nvim > /dev/null && alias vim=nvim

alias vzf='vim $(fzf)'

alias gs='git status'
alias ga='git add'
alias gaa='git add -A'
alias gd='git diff'
alias gdc='git diff --cached'
alias gc='git commit'
alias gcm='git commit -m'
alias gcam='git commit -am'
alias gp='git push'

alias info='info --vi-keys'

hl () {
    $* --help | less
}

alias dunnet='emacs -batch -l dunnet'
alias note='cat > /dev/null'

