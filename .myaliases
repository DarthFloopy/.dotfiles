# .myaliases - my custom shell aliases (shared between shells)

alias -- -='cd -'
alias ...=../..
alias ....=../../..
alias .....=../../../..
alias ......=../../../../..
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'
alias _='sudo'

alias cp='cp -v'

case "$(uname -a)" in
*Linux*)
    alias ls='ls -F --color=auto'
    #TODO: change LS_COLORS or run dircolors or something
    ;;
*Darwin*)   # specifically Mac OS X
    alias ls='ls -FG'
    export LSCOLORS='exGxcxdxCxDaeaabagacad'
    ;;
*)
    alias ls='ls -F'
esac
alias l='ls -lh'
alias la='ls -A'
alias ll='ls -lAh'
alias l.='ls -d .*'
alias ll.='ls -lhd .*'

alias sl='ls'

mkcd () {
    mkdir -p "$1" && cd "$1" ;
}

alias gs='git status'
alias gA='git add -A'

alias info='info --vi-keys'


